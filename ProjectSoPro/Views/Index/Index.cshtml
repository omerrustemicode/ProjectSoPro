@model IEnumerable<ProjectSoPro.Models.MovieRoles>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Movies" asp-action="Create">Create Movie</a> |
    <a asp-controller="Genres" asp-action="Create">Create Genres</a> |
    <a asp-action="Create">Create Roles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
             @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Genre.genres)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Genre.genres)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Movie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Movieid">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
